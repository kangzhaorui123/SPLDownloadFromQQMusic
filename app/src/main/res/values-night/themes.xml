<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 深色主题 (夜间模式) -->
    <style name="Theme.LyricDownloader" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>

        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>

        <!-- 修复：移除自定义的 colorBackground，使用标准的 Material Design 属性 -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>

        <!-- 表面变体 -->
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_dark</item>

        <!-- 错误颜色 -->
        <item name="colorError">@color/error_dark</item>
        <item name="colorOnError">@color/on_error_dark</item>

        <!-- 轮廓 -->
        <item name="colorOutline">@color/outline_dark</item>

        <!-- 状态栏 -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" >false</item>

        <!-- 导航栏 -->
        <item name="android:navigationBarColor">@color/background_dark</item>

        <!-- 组件样式 -->
        <item name="materialButtonStyle">@style/Widget.LyricDownloader.Button</item>
        <item name="editTextStyle">@style/Widget.LyricDownloader.TextInputEditText</item>
        <item name="radioButtonStyle">@style/Widget.LyricDownloader.RadioButton</item>
        <item name="progressBarStyle">@style/Widget.LyricDownloader.ProgressBar</item>

        <!-- 移除ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LyricDownloader.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">?attr/colorSurface</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle.Negative</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurfaceVariant</item>
    </style>
</resources>